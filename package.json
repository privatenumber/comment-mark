{
	"name": "comment-mark",
	"version": "0.0.0-semantic-release",
	"description": "Interpolate strings with HTML comment markers",
	"keywords": [
		"string",
		"interpolation",
		"inject",
		"html",
		"comment",
		"markdown"
	],
	"license": "MIT",
	"repository": "privatenumber/comment-mark",
	"funding": "https://github.com/privatenumber/comment-mark?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"dist"
	],
	"main": "dist/comment-mark.js",
	"module": "dist/comment-mark.mjs",
	"types": "dist/comment-mark.d.ts",
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run build",
		"test": "jest",
		"build:dts": "tsc",
		"build:js": "rollup -c rollup.config.js",
		"build": "npm run build:dts && npm run build:js"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint",
			"jest --bail --findRelatedTests"
		]
	},
	"devDependencies": {
		"@pvtnbr/eslint-config": "^0.4.2",
		"@rollup/plugin-commonjs": "^21.0.1",
		"@types/jest": "^27.0.2",
		"es-jest": "^1.4.1",
		"eslint": "^8.2.0",
		"husky": "^4.3.0",
		"jest": "^27.3.1",
		"lint-staged": "^11.2.6",
		"rollup": "^2.32.1",
		"rollup-plugin-esbuild": "^4.6.0",
		"rollup-plugin-filesize": "^9.0.2",
		"typescript": "^4.4.4"
	},
	"eslintConfig": {
		"extends": "@pvtnbr"
	},
	"packageManager": "pnpm@10.9.0"
}
